#pragma once

// Set filename for ASCII file.
inline
void
pylith::meshio::MeshIOAscii::setFilename(const char* name) {
    _filename = name;
}


// Get filename of ASCII file.
inline
const char*
pylith::meshio::MeshIOAscii::getFilename(void) const {
    return _filename.c_str();
}


